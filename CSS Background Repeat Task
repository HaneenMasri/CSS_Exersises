div{
  width: 400px;
  height: 400px;
  background-image: url("https://elzero.org/wp-content/uploads/2021/02/css-assignments-lessons-5-8-2.png");
}
 .assign-2-shape-1{
  background-image: url("../imgs/shape1.png");
  background-repeat: no-repeat;
}
.assign-2-shape-2{
  background-image: url("../imgs/shape1.png");
  background-repeat:repeat-y;
}
.assign-2-shape-3{
  background-image: url("../imgs/shape1.png");
  background-repeat: repeat-x;
}
.assign-2-shape-4{
  background-image: url("../imgs/shape1.png");
  background-repeat: repeat;
}
